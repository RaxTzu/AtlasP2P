{
  "name": "atlasp2p",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "generate:edge-config": "node scripts/generate-edge-config.js",
    "predev": "pnpm generate:edge-config",
    "dev": "turbo dev",
    "prebuild": "pnpm generate:edge-config",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @atlasp2p/web db:generate",
    "db:push": "pnpm --filter @atlasp2p/web db:push",
    "db:studio": "pnpm --filter @atlasp2p/web db:studio",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky",
    "geoip:update": "geoipupdate -f data/geoip/GeoIP.conf -d data/geoip"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "prettier": "^3.7.4",
    "turbo": "^2.7.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "valibot": ">=1.2.0"
    }
  },
  "dependencies": {
    "supabase": "^2.67.3"
  }
}
